// Returns whether the |list| includes |value|.
bool: ListContains(list[], value, length = sizeof(list)) {
    for (new i = 0; i < length; ++i) {
        if (list[i] == value)
            return true;
    }

    return false;
}

// Returns whether |componentId| is a legal modification for the |vehicleId|.
bool: IsLegalModification(vehicleId, componentId) {
    new const modelId = GetVehicleModel(vehicleId);

    // Stereo, hydraulics, nitrogen and wheel modifications are allowed on most vehicles.
    if (componentId == 1086 /* stereo */ || componentId == 1087 /* hydraulics */ ||
            ListContains(nitroComponents, componentId) ||
            ListContains(wheelComponents, componentId))
    {
        // The model Ids included in |nitroExclusionModels| are excluded from these modifications.
        return !ListContains(nitroExclusionModels, componentId);
    }

    // Other modifications must be included on a per-model whitelist.
    for (new i = 0; i < sizeof(modificationWhitelist); ++i) {
        if (modificationWhitelist[i][0] != modelId)
            continue;  // this is about another vehicle

        for (new j = 1; j < sizeof(modificationWhitelist[]); ++j) {
            if (modificationWhitelist[i][j] == componentId)
                return true;
        }

        return false;
    }

    return false;
}
